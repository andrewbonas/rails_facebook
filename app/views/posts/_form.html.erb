<%= form_with model: @post, local: true, class: "form-horizontal"  do |form| %>
  <div class="form-group p-3" >
    <%= form.label :post %>
    <%= form.text_area :body, class:"form-control" %>
  </div>
  <div class="form-group ml-3" >
    <%= form.submit class: "btn text-light bg-primary" %>
  </div>
<% end %>
